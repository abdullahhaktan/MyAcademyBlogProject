
@*
    Main Login Component
*@

@{
    Layout = null;
}

<!doctype html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Giriş Seçimi - ASP.NET Core View</title>
    <style>
        :root {
            --bg: #0f1724;
            --card: #0b1220;
            --muted: #9aa4b2;
            --glass: rgba(255,255,255,0.04);
            --accent1: linear-gradient(135deg,#7c3aed,#06b6d4);
            --accent2: linear-gradient(135deg,#ef4444,#f97316);
            --accent3: linear-gradient(135deg,#10b981,#06b6d4);
            --radius: 16px;
            --shadow: 0 10px 30px rgba(2,6,23,0.6);
            font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
        }

        html, body {
            height: 100%;
        }

        body {
            margin: 0;
            background: radial-gradient(1200px 600px at 10% 10%, rgba(99,102,241,0.08), transparent), radial-gradient(900px 400px at 90% 90%, rgba(6,182,212,0.06), transparent), var(--bg);
            color: #e6eef6;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px;
        }

        .wrap {
            width: 100%;
            max-width: 1100px;
            text-align: center;
        }

        header {
            margin-bottom: 28px
        }

            header h1 {
                margin: 0;
                font-size: 28px;
                letter-spacing: -0.2px
            }

            header p {
                margin: 8px 0 0;
                color: var(--muted)
            }

        .grid {
            display: grid;
            grid-template-columns: repeat(3,1fr);
            gap: 20px;
            align-items: stretch;
        }

        .card {
            background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
            border: 1px solid rgba(255,255,255,0.04);
            border-radius: var(--radius);
            padding: 28px;
            box-shadow: var(--shadow);
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            transition: transform .35s cubic-bezier(.2,.9,.3,1), box-shadow .35s;
            min-height: 320px;
            position: relative;
            overflow: hidden;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 40px rgba(2,6,23,0.7)
            }

        .icon-wrap {
            width: 72px;
            height: 72px;
            border-radius: 14px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 18px;
            box-shadow: 0 4px 18px rgba(2,6,23,0.5);
        }

        .title {
            font-size: 20px;
            margin: 0 0 8px
        }

        .desc {
            color: var(--muted);
            font-size: 14px;
            margin-bottom: 20px
        }

        .btn {
            display: inline-flex;
            gap: 10px;
            align-items: center;
            padding: 12px 18px;
            border-radius: 12px;
            background: transparent;
            border: 1px solid rgba(255,255,255,0.08);
            color: inherit;
            text-decoration: none;
            font-weight: 600;
            cursor: pointer;
            transition: all .25s;
        }

            .btn:active {
                transform: translateY(1px)
            }

            .btn.primary {
                color: white;
                border: none;
                background: linear-gradient(90deg, rgba(255,255,255,0.08), rgba(255,255,255,0.04));
                backdrop-filter: blur(6px)
            }

        /* specific accents */
        .card.writer .icon-wrap {
            background: var(--accent1)
        }

        .card.writer::after {
            content: "";
            position: absolute;
            right: -40px;
            top: -40px;
            width: 220px;
            height: 220px;
            background: linear-gradient(135deg, rgba(124,58,237,0.12), rgba(6,182,212,0.08));
            transform: rotate(25deg);
            filter: blur(20px);
        }

        .card.user .icon-wrap {
            background: var(--accent2)
        }

        .card.user::after {
            content: "";
            position: absolute;
            left: -40px;
            bottom: -40px;
            width: 220px;
            height: 220px;
            background: linear-gradient(135deg, rgba(239,68,68,0.12), rgba(249,115,22,0.08));
            transform: rotate(-15deg);
            filter: blur(20px);
        }

        .card.admin .icon-wrap {
            background: var(--accent3)
        }

        .card.admin::after {
            content: "";
            position: absolute;
            right: -20px;
            bottom: -20px;
            width: 180px;
            height: 180px;
            background: linear-gradient(135deg, rgba(16,185,129,0.12), rgba(6,182,212,0.08));
            transform: rotate(10deg);
            filter: blur(20px);
        }

        /* small list of privileges */
        .features {
            display: flex;
            flex-direction: column;
            gap: 8px;
            margin-top: 18px;
            text-align: left
        }

        .feat {
            display: flex;
            gap: 10px;
            align-items: center;
            color: var(--muted);
            font-size: 13px
        }

            .feat svg {
                opacity: 0.95
            }

        @@media (max-width:980px) {
            .grid

        {
            grid-template-columns: repeat(2,1fr)
        }

        }
        @@media (max-width:640px) {
            .grid

        {
            grid-template-columns: 1fr
        }

        body {
            padding: 20px
        }

        }

        .card.user::after {
            pointer-events: none; /* artık tıklamalar kartın üstüne geçecek */
        }

    </style>
</head>
<body>
    <div class="wrap">
        <header>
            <h1>Giriş Türünü Seçin</h1>
            <p>Hesabınıza uygun kutuya tıklayarak giriş yapın. (Yönlendirme örnektir.)</p>
        </header>

        <main class="grid" role="main" aria-label="Giriş seçenekleri">

            <!-- Writer -->
            <section class="card writer" aria-labelledby="writer-title">
                <div>
                    <div class="icon-wrap" aria-hidden="true">
                        <!-- Pen icon -->
                        <svg width="34" height="34" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M3 21l1.5-4.5L17.5 3.5a2 2 0 012.8 0l.2.2a2 2 0 010 2.8L7.5 22.5 3 21z" stroke="white" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M14 7l3 3" stroke="white" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </div>
                    <h2 id="writer-title" class="title">Yazar Girişi</h2>
                    <p class="desc">Makale, içerik veya gönderi oluşturup düzenlemek için yazar hesabıyla giriş yapın.</p>

                    <div class="features">
                        <div class="feat"><svg width="14" height="14" viewBox="0 0 24 24" fill="none"><path d="M5 12l4 4L20 5" stroke="#ffffff" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" /></svg> Blog oluşturma ve düzenleme işlemleri</div>
                        <div class="feat"><svg width="14" height="14" viewBox="0 0 24 24" fill="none"><path d="M5 12l4 4L20 5" stroke="#ffffff" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" /></svg> Profil sayfası güncelleme işlemleri</div>
                        <div class="feat"><svg width="14" height="14" viewBox="0 0 24 24" fill="none"><path d="M5 12l4 4L20 5" stroke="#ffffff" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" /></svg> Blog okuma ve yorum yapma işlemleri</div>
                    </div>
                </div>
                <br />
                <div>
                    <a class="btn primary" href="/Login/WriterLogin">Yazar olarak giriş yap →</a>
                </div>
            </section>

            <!-- User -->
            <section class="card user" aria-labelledby="user-title">
                <div>
                    <div class="icon-wrap" aria-hidden="true">
                        <!-- User icon -->
                        <svg width="34" height="34" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2" stroke="white" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M12 11a4 4 0 100-8 4 4 0 000 8z" stroke="white" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </div>
                    <h2 id="user-title" class="title">Kullanıcı Girişi</h2>
                    <p class="desc">Hesabınıza erişmek, profilinizi yönetmek ve içeriklere erişmek için kullanıcı olarak giriş yapın.</p>

                    <div class="features">
                        <div class="feat"><svg width="14" height="14" viewBox="0 0 24 24" fill="none"><path d="M5 12l4 4L20 5" stroke="#ffffff" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" /></svg> Profil düzenleme işlemleri</div>
                        <div class="feat"><svg width="14" height="14" viewBox="0 0 24 24" fill="none"><path d="M5 12l4 4L20 5" stroke="#ffffff" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" /></svg> Blog okuma ve yorum yapma işlemleri</div>
                    </div>
                </div>

                <div>
                    <a class="btn primary" href="/Login/UserLogin">Kullanıcı olarak giriş yap →</a>
                </div>
            </section>

            <!-- Admin -->
            <section class="card admin" aria-labelledby="admin-title">
                <div>
                    <div class="icon-wrap" aria-hidden="true">
                        <!-- Shield / admin icon -->
                        <svg width="34" height="34" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 2l7 4v5c0 5-3.1 9.7-7 11-3.9-1.3-7-6-7-11V6l7-4z" stroke="white" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M9.5 12.5l3 3 4-4" stroke="white" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </div>
                    <h2 id="admin-title" class="title">Admin Girişi</h2>
                    <p class="desc">Site yönetimi, kullanıcı yönetimi ve içerik onayı için admin hesabıyla giriş yapın.</p>

                    <div class="features">
                        <div class="feat"><svg width="14" height="14" viewBox="0 0 24 24" fill="none"><path d="M5 12l4 4L20 5" stroke="#ffffff" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" /></svg> Tüm yetki (içerik yönetimi , rol atama , kullanıcı CRUD işlemleri vesaire)</div>
                    </div>
                </div>

                <div>
                    <a class="btn primary" href="/Login/Index">Admin olarak giriş yap →</a>
                </div>
            </section>

        </main>

        <footer style="margin-top:24px;color:var(--muted);font-size:13px">Not: Yönlendirme yollarını (href) kendi ASP.NET Core uygulamanıza göre güncelleyin.</footer>
    </div>
</body>
</html>
