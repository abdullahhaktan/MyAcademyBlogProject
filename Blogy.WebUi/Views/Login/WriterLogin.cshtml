@model LoginDto

@{
    ViewData["Title"] = "Yazar Girişi";
    // Layout'u devre dışı bırakıyoruz.
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Yazar Girişi</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        /* Yazar Girişi için özelleştirilmiş değişkenler (Turuncu/Kırmızı vurgu) */
        :root {
            --bg: #0f172a;
            --glass: rgba(255, 255, 255, 0.06);
            --border: rgba(255, 255, 255, 0.08);
            --text: #e2e8f0;
            /* Vurgu Rengi: Turuncu/Kırmızı gradient */
            --accent: linear-gradient(135deg, #f59e0b, #ef4444);
            --accent-focus: #f59e0b; /* Tekil odak rengi */
            --accent-focus-shadow: rgba(245, 158, 11, 0.3);
        }

        body {
            margin: 0;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            /* Arka plan gradyanı vurgu rengiyle uyumlu */
            background: radial-gradient(circle at 10% 20%, rgba(251, 146, 60, 0.15), transparent 40%), radial-gradient(circle at 90% 80%, rgba(245, 158, 11, 0.15), transparent 40%), var(--bg);
            font-family: "Segoe UI", Roboto, sans-serif;
            color: var(--text);
        }

        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 40px;
            border-radius: 20px;
            background: var(--glass);
            border: 1px solid var(--border);
            backdrop-filter: blur(16px);
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
        }

        h2 {
            text-align: center;
            font-size: 26px;
            margin-bottom: 30px;
            letter-spacing: -0.5px;
        }

        .form-group {
            margin-bottom: 18px;
            position: relative;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            border-radius: 10px;
            border: 1px solid var(--border);
            background-color: rgba(255, 255, 255, 0.05);
            color: var(--text);
            font-size: 15px;
            outline: none;
            transition: all 0.25s;
        }

            .form-control:focus {
                border-color: var(--accent-focus);
                box-shadow: 0 0 0 2px var(--accent-focus-shadow);
            }

        .btn {
            display: inline-block;
            width: 100%;
            background: var(--accent);
            color: white;
            border: none;
            padding: 12px 16px;
            border-radius: 10px;
            cursor: pointer;
            font-weight: 600;
            letter-spacing: 0.4px;
            transition: all 0.25s ease;
        }

            .btn:hover {
                opacity: 0.9;
                transform: translateY(-1px);
            }

        .checkbox-wrap {
            font-size: 14px;
            color: #cbd5e1;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .checkbox-wrap input[type="checkbox"] {
                accent-color: var(--accent-focus);
                width: 16px;
                height: 16px;
            }

        .toggle-password {
            position: absolute;
            right: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            cursor: pointer;
        }

            .toggle-password:hover {
                color: var(--accent-focus);
            }

        footer {
            text-align: center;
            margin-top: 25px;
            font-size: 13px;
            color: #94a3b8;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2><i class="fa-solid fa-pen-nib"></i> Yazar Girişi</h2>

        <form method="post" class="signin-form">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Kullanıcı Adı" asp-for="UserName" required />
            </div>

            <div class="form-group">
                <input id="password-field" type="password" class="form-control" placeholder="Şifre" asp-for="Password" required />
                <i toggle="#password-field" class="fa fa-eye toggle-password"></i>
            </div>

            <div class="form-group">
                <button type="submit" class="btn">Giriş Yap</button>
            </div>

            <div class="form-group d-md-flex">
                <label class="checkbox-wrap">
                    <input type="checkbox" />
                    Beni Hatırla
                </label>
            </div>
        </form>

        <a style="height:40px;width:80px" type="submit" class="btn" href="/Login/Index">Admin girişi</a>

        <a style="height:40px;width:80px;margin-left:170px" type="submit" class="btn" href="/Login/UserLogin">Kullanıcı girişi</a>

        <footer>© 2025 Yazar Paneli</footer>
    </div>

    <script>
        // Şifre göster/gizle JavaScript fonksiyonu
        document.querySelectorAll('.toggle-password').forEach(icon => {
            icon.addEventListener('click', function () {
                const target = document.querySelector(this.getAttribute('toggle'));
                const type = target.getAttribute('type') === 'password' ? 'text' : 'password';
                target.setAttribute('type', type);
                this.classList.toggle('fa-eye-slash');
            });
        });
    </script>
</body>
</html>