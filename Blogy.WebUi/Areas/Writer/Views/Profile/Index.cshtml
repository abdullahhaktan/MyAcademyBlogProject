@model EditProfileDto

@{
    ViewData["Title"] = "Profil Güncelleme";
    Layout = "~/Views/WriterLayout/Index.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-secondary text-white text-center">
            <h4 class="mb-0 fw-semibold">👤 Profil Bilgilerini Güncelle</h4>
        </div>

        <div class="card-body">
            <div class="text-center mb-4">
                <img src="@Model.ImageUrl" class="rounded-circle" style="height:120px;width:120px;object-fit:cover;" alt="Profil Resmi" />
                <p class="mt-2 text-muted">Mevcut Profil Resminiz</p>
            </div>

            <form method="post" enctype="multipart/form-data">
                <div class="row g-3">

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Profil Resmi Seçin</label>
                        <input type="file" asp-for="ImageFile" class="form-control" />
                        <span class="text-danger" asp-validation-for="ImageFile"></span>

                        <label class="form-label fw-semibold mt-3">Ad</label>
                        <input type="text" asp-for="FirstName" class="form-control" required />

                        <label class="form-label fw-semibold mt-3">Soyad</label>
                        <input type="text" asp-for="LastName" class="form-control" required />

                        <label class="form-label fw-semibold mt-3">Kullanıcı Adı</label>
                        <input type="text" asp-for="UserName" class="form-control" required />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Email</label>
                        <input type="email" asp-for="Email" class="form-control" />

                        <label class="form-label fw-semibold mt-3">Ünvan</label>
                        <input type="text" asp-for="Title" class="form-control" />

                        <label class="form-label fw-semibold mt-3">Telefon Numarası</label>
                        <input type="text" asp-for="PhoneNumber" class="form-control" />

                        <input type="hidden" asp-for="ImageUrl" />
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-semibold">Bilgileri Güncellemek için Mevcut Şifrenizi Girin</label>
                        <input type="password" asp-for="CurrentPassword" class="form-control" required />
                    </div>

                    <div class="col-12 text-center mt-3">
                        <span class="text-danger">@Html.ValidationSummary()</span>
                    </div>

                    <div class="col-12 text-center mt-3">
                        <button type="submit" class="btn btn-dark px-4 fw-semibold">
                            <i class="fa fa-save me-1"></i> Bilgileri Güncelle
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
