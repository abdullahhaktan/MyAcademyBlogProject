@model List<ResultCommentDto>

@{
    ViewData["Title"] = "Yorumlar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0 fw-semibold">💬 Yorumlar</h4>
            <a href="/Admin/Comment/CreateComment" class="btn btn-light btn-sm fw-semibold">
                <i class="fa fa-plus me-1"></i> Yeni Yorum Ekle
            </a>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th scope="col" style="width: 60px;">#</th>
                            <th scope="col">Blog Id</th>
                            <th scope="col">Yorum İçeriği</th>
                            <th scope="col" class="text-center" style="width: 180px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.Id</td>
                                <td>@item.BlogId</td>
                                <td class="text-truncate" style="max-width: 400px;">@item.Content</td>
                                <td class="text-center">
                                    <a href="/Admin/Comment/UpdateComment/@item.Id" class="btn btn-sm btn-warning me-1">
                                        <i class="fa fa-pencil me-1"></i> Güncelle
                                    </a>
                                    <a href="/Admin/Comment/DeleteComment/@item.Id" class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash me-1"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
