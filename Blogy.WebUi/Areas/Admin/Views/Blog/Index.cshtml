@model List<ResultBlogDto>

@{
    ViewData["Title"] = "Bloglar"; // Başlık daha açıklayıcı oldu
    Layout = "~/Views/AdminLayout/Index.cshtml";

}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-dark text-white text-center">
            <h4 class="mb-0">Blog Listesi</h4>
        </div>
        <div class="card-body p-4">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 5%;">#</th>
                        <th style="width: 70%;">Kategori Adı</th>
                        <th style="width: 70%;">Açıklama</th>
                        <th style="width: 25%;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> <img src="@item.CoverImage" style="width:75px;height:75px" alt="Alternate Text" /> @item.Title</td>

                            <td>@item.Category.CategoryName</td>
                            <td>@(item.Description.Length > 100 ? item.Description.Substring(0, 30) + "..." : item.Description)</td>
                            <td>
                                <a href="/Admin/Blog/DeleteBlog/@item.Id" class="btn btn-sm btn-danger me-2">
                                    <i class="fas fa-trash-alt me-1"></i> Sil
                                </a>
                                <a href="/Admin/Blog/UpdateBlog/@item.Id" class="btn btn-sm btn-info">
                                    <i class="fas fa-edit me-1"></i> Güncelle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="d-flex justify-content-end mt-3">
                <a href="/Admin/Blog/CreateBlog" class="btn btn-primary">
                    <i class="fas fa-plus-circle me-2"></i> Yeni Blog Ekle
                </a>
            </div>
        </div>
    </div>
</div>
