@model List<AppRole>

@{
    ViewData["Title"] = "Rol Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-dark text-white text-center">
            <h4 class="mb-0 fw-semibold">🛡️ Rol Listesi</h4>
        </div>

        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 70%;">Rol Adı</th>
                            <th style="width: 30%;" class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Name</td>
                                <td class="text-center">
                                    <a href="/Role/DeleteRole/@role.Id" class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash me-1"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a href="/Role/CreateRole" class="btn btn-success fw-semibold">
                    <i class="fa fa-plus-circle me-1"></i> Rol Ekle
                </a>
            </div>
        </div>
    </div>
</div>
