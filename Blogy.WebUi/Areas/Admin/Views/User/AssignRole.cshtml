@model List<AssignRoleDto>

@{
    ViewData["Title"] = "Rol Atama";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0 fw-semibold">🛡️ Rol Atama</h4>
            <small>@ViewBag.fullName kullanıcısına rol atama yapabilirsiniz</small>
        </div>

        <div class="card-body p-4">
            <form method="post">
                <div class="mb-3">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check mb-2">
                            <input type="hidden" asp-for="@Model[i].UserId" />
                            <input type="hidden" asp-for="@Model[i].RoleId" />
                            <input type="hidden" asp-for="@Model[i].RoleName" />
                            <input type="checkbox" asp-for="@Model[i].RoleExists" class="form-check-input" id="roleCheck@i" />
                            <label class="form-check-label" for="roleCheck@i">@Model[i].RoleName</label>
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-primary fw-semibold px-4">
                        <i class="fa fa-user-tag me-1"></i> Rol Ata
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
