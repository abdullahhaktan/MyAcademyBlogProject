@model UpdateCategoryDto

@{
    ViewData["Title"] = "Kategori Güncelle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-warning text-dark text-center">
            <h4 class="mb-0 fw-semibold">✏️ Kategori Güncelle</h4>
        </div>

        <div class="card-body p-4">
            <form method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">Kategori Adı</label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Kategori adını düzenle" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary px-4 fw-semibold">
                        <i class="fa fa-refresh me-1"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>